<Window x:Class="ProcessNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessNote"
        mc:Ignorable="d"
        Title="MainWindow" Height="510" Width="800">
    <DockPanel HorizontalAlignment="Left" Height="416" LastChildFill="False" Margin="66,39,0,0" VerticalAlignment="Top" Width="660">

        <Grid DockPanel.Dock="Bottom" Height="189" Margin="321,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ListView HorizontalAlignment="Left" Height="179" VerticalAlignment="Bottom" Width="339" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button Content="Add comment" HorizontalAlignment="Left" Height="31" Margin="203,6,0,0" VerticalAlignment="Top" Width="119"/>
            <Label Content="Comments" HorizontalAlignment="Left" Height="31" Margin="19,8,0,0" VerticalAlignment="Top" Width="75"/>

        </Grid>
        <Grid DockPanel.Dock="Left" Width="321" Margin="0,0,0,-188.8">
            <DataGrid Name="processTable" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dataGrid_selectedRow" MouseDoubleClick="dataGrid_MouseDoubleClick" CanUserResizeColumns="False" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="PID" Binding="{Binding PID}"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>

        <Grid Margin="0,0,0,77.2" Width="338">
            <TextBox Name ="CPU" HorizontalAlignment="Left" Height="41" Margin="82,35,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="68"/>
            <TextBox Name ="RunningTime" HorizontalAlignment="Left" Height="41" Margin="174,35,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="68"/>
            <TextBox Name ="MemoryUsage" HorizontalAlignment="Left" Height="41" Margin="82,104,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="68"/>
            <TextBox Name ="StartTime" HorizontalAlignment="Left" Height="41" Margin="174,104,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="68"/>
            <Label Content="CPU Usage" HorizontalAlignment="Left" Height="25" Margin="81,5,0,0" VerticalAlignment="Top" Width="69"/>
            <Label Content="Running Time" HorizontalAlignment="Left" Height="25" Margin="174,5,0,0" VerticalAlignment="Top" Width="87"/>
            <Label Content="Memory Usage" HorizontalAlignment="Left" Height="25" Margin="77,80,0,0" VerticalAlignment="Top" Width="92"/>
            <Label Content="Start Time" HorizontalAlignment="Left" Height="25" Margin="174,80,0,0" VerticalAlignment="Top" Width="69"/>

            <Button Margin="29,174,224,-54" Click="Open_ThreadsWindow" Content="Show threads"/>
            <Button Margin="119,174,135,-55" Content="Add comment"/>

        </Grid>


    </DockPanel>
</Window>
